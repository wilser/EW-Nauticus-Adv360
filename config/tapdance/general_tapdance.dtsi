TD_WinScreenshot_SnagIt: tapdance_winss_snagitss {
    compatible = "zmk,behavior-tap-dance";
    #binding-cells = <0>;
    tapping-term-ms = <300>;
    bindings = <&kp LG(LS(S))>, <&kp RC(RS(RA(P)))>;  // [1x] Win+Shift+S   [2x] Ctrl+Shift+Alt+P (customized in SnagIt settings)
};

