// ---------- NEW WIP LAYOUTS 2024-02-19+ ---------- //
// F20 >> AHK(Ø)
// F21 >> AHK(•)
// F14 >> AHK(~ing)
// F15 >> AHK(~tion)
// Note: (` grave; # hash, - minus, ...)

//MOD_MORPH_SHIFT(mmNG2_Bksl  , BACKSLASH       , F20          , mmsNG2_Bksl) // F20 Ø
  MOD_MORPH_SHIFT(mmNG2_Bksl  , BACKSLASH       , PIPE         , mmsNG2_Bksl)
  
// TOP ROW (L to R)
//MOD_MORPH_SHIFT(mmNG2_LsTh  , LESS_THAN       , N1           , mmsNG2_LsTh)
//MOD_MORPH_SHIFT(mmNG2_GrTh  , GREATER_THAN    , N2           , mmsNG2_GrTh)
//MOD_MORPH_SHIFT(mmNG2_Semi  , SEMI            , N4           , mmsNG2_Semi)
  MOD_MORPH_SHIFT(mmNG2_Semi  , SEMI            , N1           , mmsNG2_Semi)
  MOD_MORPH_SHIFT(mmNG2_Qstn  , QUESTION        , N2           , mmsNG2_Qstn)
  MOD_MORPH_SHIFT(mmNG2_Quot  , DOUBLE_QUOTES   , N3           , mmsNG2_Quot)  
  MOD_MORPH_SHIFT(mmNG2_Apos  , APOS            , N4           , mmsNG2_Apos)
  MOD_MORPH_SHIFT(mmNG2_Star  , STAR            , N5           , mmsNG2_Star)
  
//MOD_MORPH_SHIFT(mmNG2_Coln  , COLON           , N7           , mmsNG2_Coln)
//MOD_MORPH_SHIFT(mmNG2_Quot  , DOUBLE_QUOTES   , N8           , mmsNG2_Quot)
//MOD_MORPH_SHIFT(mmNG2_Qstn  , QUESTION        , N9           , mmsNG2_Qstn)
  MOD_MORPH_SHIFT(mmNG2_Tion  , F15             , N6           , mmsNG2_Tion) // F15 tion
  MOD_MORPH_SHIFT(mmNG2_LsTh  , LESS_THAN       , N7           , mmsNG2_LsTh)
  MOD_MORPH_SHIFT(mmNG2_Coln  , COLON           , N8           , mmsNG2_Coln)
  MOD_MORPH_SHIFT(mmNG2_GrTh  , GREATER_THAN    , N9           , mmsNG2_GrTh)
  MOD_MORPH_SHIFT(mmNG2_Equl  , EQUAL           , N0           , mmsNG2_Equl)
 
// L-BOTTOM CORNER
  MOD_MORPH_SHIFT(mmNG2_Ing   , F14             , F21          , mmsNG2_Ing ) // F14 "ing", F21 •
  MOD_MORPH_SHIFT(mmNG2_Cret  , CARET           , GRAVE        , mmsNG2_Cret)

// L-MID COLUMN (T to B): 
  MOD_MORPH_SHIFT(mmNG2_Amps  , AMPS            , F20          , mmsNG2_Amps) // F20 Ø
  MOD_MORPH_SHIFT(mmNG2_Cmma  , COMMA           , AT           , mmsNG2_Cmma)
  MOD_MORPH_SHIFT(mmNG2_Lpar  , LPAR            , TILDE        , mmsNG2_Lpar)
 
// R-MID COLUMN (T to B): 
  MOD_MORPH_SHIFT(mmNG2_Hash  , HASH            , DLLR         , mmsNG2_Hash)
  MOD_MORPH_SHIFT(mmNG2_Perd  , PERIOD          , PLUS         , mmsNG2_Perd)
  MOD_MORPH_SHIFT(mmNG2_Rpar  , RPAR            , EXCLAMATION  , mmsNG2_Rpar)
   
// Rh COLUMN (T to B): 
  MOD_MORPH_SHIFT(mmNG2_Slsh  , SLASH           , PERCENT      , mmsNG2_Slsh)
  MOD_MORPH_SHIFT(mmNG2_Mnus  , MINUS           , UNDERSCORE   , mmsNG2_Mnus)
  

  // Special for Q:
    // tap|hold {qu,QU}; hold/shift {q,Q}
    // uses "&as_Qu Q 0" in map; 0 parm for the nil macro parm
    as_Qu: auto_shift_Qu {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping-term-ms = <150>;
      quick-tap-ms = <0>;
      flavor = "tap-preferred";
      bindings = <&kp>, <&mm_QU>; // can do to mod-morph?
  };
  
  
