/* ASSUMES GENERAL ONE INCLUDED BEFORE THIS ONE! */
/* first label "mm<>" goes to "m_mm<>" for the &mm<> ref in layouts */

// ---------- NEW WIP LAYOUTS 2024-02-19+ ---------- //
// F20 >> AHK(Ø)
// F21 >> AHK(•)
// F14 >> AHK(~ing)
// F15 >> AHK(~tion)
// Note: (` grave; # hash, - minus, ...)

// TOP ROW (L to R)
  MOD_MORPH_SHIFT(mmNG2_Ing   , F14             , F15          , mmsNG2_Ing ) // F14 "ing" / F15 "tion"
  
  MOD_MORPH_SHIFT(mmNG2_LsTh  , LESS_THAN       , N1           , mmsNG2_LsTh)
  MOD_MORPH_SHIFT(mmNG2_GrTh  , GREATER_THAN    , N2           , mmsNG2_GrTh)
  MOD_MORPH_SHIFT(mmNG2_Apos  , APOS            , N3           , mmsNG2_Apos)
  MOD_MORPH_SHIFT(mmNG2_Semi  , SEMI            , N4           , mmsNG2_Semi)
  MOD_MORPH_SHIFT(mmNG2_Star  , STAR            , N5           , mmsNG2_Star)
  
//MOD_MORPH_SHIFT(mmNG2_At    , AT              , N6           , mmsNG2_At  )
  MOD_MORPH_SHIFT(mmNG2_Bksl  , BACKSLASH       , N6           , mmsNG2_Bksl)
//MOD_MORPH_SHIFT(mmNG2_Coln  , COLON           , N7           , mmsNG2_Coln)
  MOD_MORPH_SHIFT(mmNG2_Dllr  , DLLR            , N7           , mmsNG2_Dllr)
  MOD_MORPH_SHIFT(mmNG2_Quot  , DOUBLE_QUOTES   , N8           , mmsNG2_Quot)
  MOD_MORPH_SHIFT(mmNG2_Qstn  , QUESTION        , N9           , mmsNG2_Qstn)
  MOD_MORPH_SHIFT(mmNG2_Equl  , EQUAL           , N0           , mmsNG2_Equl)
 
// L-BOTTOM
  MOD_MORPH_SHIFT(mmNG2_Tild  , TILDE           , GRAVE        , mmsNG2_Tild)

// L-MID COLUMN (T to B): 
  MOD_MORPH_SHIFT(mmNG2_Amps  , AMPS            , PLUS         , mmsNG2_Amps)
  MOD_MORPH_SHIFT(mmNG2_Cmma  , COMMA           , EXCLAMATION  , mmsNG2_Cmma)
  MOD_MORPH_SHIFT(mmNG2_Lpar  , LPAR            , PIPE         , mmsNG2_Lpar)
 
// R-MID COLUMN (T to B): 
  MOD_MORPH_SHIFT(mmNG2_Hash  , HASH            , AT           , mmsNG2_Hash)
//MOD_MORPH_SHIFT(mmNG2_Perd  , PERIOD          , DLLR         , mmsNG2_Perd)
  MOD_MORPH_SHIFT(mmNG2_Perd  , PERIOD          , COLON        , mmsNG2_Perd)
  MOD_MORPH_SHIFT(mmNG2_Rpar  , RPAR            , CARET        , mmsNG2_Rpar)
   
// Rh COLUMN (T to B): 
  MOD_MORPH_SHIFT(mmNG2_Slsh  , SLASH           , PERCENT      , mmsNG2_Slsh)
  MOD_MORPH_SHIFT(mmNG2_Mnus  , MINUS           , UNDERSCORE   , mmsNG2_Mnus)
  

  // Special for Q:
    // tap|hold {qu,QU}; hold/shift {q,Q}
    // uses "&as_Qu Q 0" in map; 0 parm for the nil macro parm
    as_Qu: auto_shift_Qu {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping-term-ms = <150>;
      quick-tap-ms = <0>;
      flavor = "tap-preferred";
      bindings = <&kp>, <&mm_QU>; // can do to mod-morph?
  };
  
  
