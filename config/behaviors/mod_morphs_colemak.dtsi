// TEMP for now: the NAME part has to be unique-enough globally
// Makes a ModMorph to override Shift+<> to be some alternate punctuation. Then adds Auto-Shift for same combo.
// see NOTES below

#define MOD_MORPH_SHIFT(MM_NAME, KEY, MOD_KEY, AS_NAME) ##MM_NAME: ##MM_NAME { \
    compatible = "zmk,behavior-mod-morph"; \
    label = ##MM_NAME; \
    #binding-cells = <0>; \
    bindings = <&kp KEY>, <&kp MOD_KEY>; \
    mods = <(MOD_LSFT|MOD_RSFT)>; \
}; \
##AS_NAME: ##AS_NAME { \
    compatible = "zmk,behavior-hold-tap"; \
    label = ##AS_NAME; \
    #binding-cells = <2>; \
    tapping_term_ms = <150>; \
    quick_tap_ms = <0>; \
    flavor = "tap-preferred"; \
    bindings = <&kp>, <&##MM_NAME>; \
};


// #s 1-0
MOD_MORPH_SHIFT(mms_CMK_1GRAVE,   N1 ,    GRAVE        , mmsas_CMK_1GRAVE  )
