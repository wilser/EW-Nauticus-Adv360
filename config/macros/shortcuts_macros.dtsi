#define _WAIT <5>
#define _TAP <5>

m_M1: m_M1 {
    wait-ms = _WAIT;
    tap-ms = _TAP;
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>;
    bindings = <&kp LS(T) &kp H &kp I &kp S &kp SPACE>;
};

