 /* NOTES
    https://zmk.dev/docs/features/combos
    https://zmk.dev/docs/config/combos

    timeout-ms: must hit combo w/in that time
    layers = <0 1 ...> // OPTIONAL - to restrict combo to only work on that/those layers

 */

 /* #DEFs...  see adv360.keymap : this file included below the #defs */

compatible = "zmk,combos";
timeout-ms = <50>;

combo_caps_word {
    key-positions = <49 50>; // RH, Fng 1,2, 1-row down
    bindings = <&caps_word>;
};

combo_backspace {
    key-positions = <49 52>; // RH, Fng 1,4, 1-row down
    bindings = <&kp BACKSPACE>;
    layers = <L_DVK L_CMK>; // (main typing) only
};

combo_space {
    key-positions = <29 64>; // LH, Fng 1+thumb (A+top-left-thumb)
    bindings = <&kp SPACE>;
    layers = <L_DVK L_CMK L_LR>;
    
};

